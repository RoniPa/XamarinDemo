<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFantasticApp.Pages.NewEntryPage">
  <ContentPage.Title>New Entry</ContentPage.Title>
  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Save" Command="{Binding SaveEntryCommand}"/>
  </ContentPage.ToolbarItems>
  <TableView Intent="Form">
    <TableRoot>
      <TableSection Title="Entry data">
        <EntryCell Text="{Binding EntryTitle}" Label="Title"></EntryCell>
        <EntryCell Text="{Binding EntryLatitude}" Label="Latitude" Keyboard="Numeric"></EntryCell>
        <EntryCell Text="{Binding EntryLongitude}" Label="Longitude" Keyboard="Numeric"></EntryCell>
        <EntryCell Text="{Binding EntryDate}" Label="Date"></EntryCell>
        <EntryCell Text="{Binding EntryRating}" Label="Rating" Keyboard="Numeric"></EntryCell>
        <EntryCell Text="{Binding EntryNoted}" Label="Notes"></EntryCell>
      </TableSection>
    </TableRoot>
  </TableView>
</ContentPage>